datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Song {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  type      String
  duration  String
  image     String
  url       String
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  likes     Like[]
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  songs    Song[]
  likes    Like[]
}

model Like {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int
  song   Song @relation(fields: [songId], references: [id])
  songId Int

  @@unique([songId, userId])
}
